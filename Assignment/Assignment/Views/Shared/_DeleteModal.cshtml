@model Assignment_Data.Custom_Model.LibraryCm

<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered ">
        <div class="modal-content pt-4 pb-4 border rounded-4">
            <div class="container d-flex flex-column pt-4 pb-4">
                <div class="container d-flex justify-content-center">
                    <img src="~/images/exclamation.png" style="height: 100px;"/>
                </div>
                <div class="container d-flex justify-content-center fs-4">
                    Confirmation
                </div>
            </div>
            <div class="container pt-4 pb-4 text-center">
                Are you sure want to delete this book?
            </div>
            <div class="d-flex justify-content-center">
                <button type="button" class="btn btn-white mx-2" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-danger text-white mx-2" onclick="ConfirmDelete(@Model.BookId)">Delete</button>
            </div>
        </div>
    </div>
</div>
