@model Data_Access.Custom_Models.AdminDashboardCm
@{
    ViewData["Title"] = "Admin View Case";
}

<div class="container">
    <div class="d-flex justify-content-between align-items-center mx-3">
        <h4>Notes</h4>

        @if (Model.callId == 2)
        {
                    <a class="btn btn-outline-info fw-bold" onclick="GetProviderDashboard()">
                        <i class="bi bi-caret-left-fill d-sm-inline d-none"></i> Back
                    </a>
        }
        else
        {
                    <a class="btn btn-outline-info fw-bold" onclick="GetDashboard()">
                        <i class="bi bi-caret-left-fill d-sm-inline d-none"></i> Back
                    </a>
        }

    </div>

    <form action="" class="" method="post" id="viewNotesForm" onsubmit="UpdateViewNotes()">
        <input type="text" asp-for="@Model.viewNotesData.RequestId" hidden />
        <input type="text" asp-for="@Model.StatusForName" id="statusForName" hidden />
        <input type="text" asp-for="@Model.callId" hidden />

        <div class="m-3">
            <div class="row mt-1">
                <div class="form-floating mb-3 col-12 col-sm-6 ">
                    <div class=" border shadow rounded d-flex">
                        <div class="m-3">
                            <i class="fa-solid fa-arrow-right-arrow-left fs-4"></i>
                        </div>
                        <div class="m-2">
                            <h6> Transfer Notes</h6>
                            <small class="text-secondary">
                                <ul>
                                    @foreach (var obj in Model.viewNotesData.TransferNotes)
                                    {
                                                <li>
                                            @obj.Notes
                                                </li>
                                    }
                                </ul>
                            </small>
                        </div>
                    </div>

                </div>

                <div class="form-floating mb-3 col-12 col-sm-6 ">
                    <div class="border shadow rounded d-flex">

                        <div class="m-3">
                            <i class="fa-solid fa-user-doctor fs-4"></i>
                        </div>
                        <div class="m-2">
                            <h6>  Physician Notes</h6>
                            <small class="text-secondary">
                                @Model.viewNotesData.PhysicianNotes
                            </small>
                        </div>


                    </div>
                </div>
            </div>

            <div class="row mt-2">
                <div class="form-floating mb-3 col-12 col-sm-6 ">
                    <div class="border shadow rounded d-flex">

                        <div class="m-3">
                            <i class="fa-solid fa-user-tie fs-4"></i>
                        </div>
                        <div class="m-2">
                            <h6>  Admin notes</h6>
                            <small class="text-secondary">
                                @Model.viewNotesData.AdminNotes
                            </small>
                        </div>
                    </div>

                </div>

            </div>


            <div class="border shadow rounded mt-3">
                <div class="row m-3 mx-0 mx-sm-1">
                    <div class=" col-12 form-floating mb-3 ">
                        <textarea class="form-control h-100 dclass" id="adminNote" placeholder="Textarea" rows="5" asp-for="@Model.viewNotesData.AdminNotes"></textarea>
                        <label for="adminNote" class="text-wrap ms-2">Aditional Notes</label>
                        <span class="text-danger" asp-validation-for="@Model.viewNotesData.AdminNotes"></span>
                    </div>
                </div>
                <div class="d-grid gap-2 d-flex justify-content-center  justify-content-md-end m-4 pt-4 ">

                    <button type="submit" class="btn text-white btn-info">Save Changes</button>

                </div>
            </div>


        </div>
    </form>
</div>

<partial name="_ValidationScriptsPartial" />