@model Data_Access.Custom_Models.AdminDashboardCm

<div class="modal fade" id="sendLinkModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle"
     aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header bg-info">
                <div class="modal-title text-light" id="exampleModalLongTitle">Send mail to patient for submitting request</div>
                <button type="button" class="btn-close" aria-label="Close" data-bs-dismiss="modal"></button>
            </div>

            <form class="p-3" id="sendLinkFormId" method="post" onsubmit="SendLink(@Model.StatusForName, @Model.callId)">
                <input type="text" asp-for="@Model.callId" hidden/>

                <div class="form-floating mb-3 col-12">
                    <input asp-for="@Model.sendLink.FirstName" type="text" class="form-control bg-transparent" id="floatingInputFirstName"
                           placeholder="">
                    <label for="floatingInputFirstName" class="ms-2 ">First Name</label>
                    <span class="text-danger" asp-validation-for="@Model.sendLink.FirstName"></span>
                </div>
                <div class="form-floating mb-3 col-12">
                    <input asp-for="@Model.sendLink.LastName" type="text" class="form-control bg-transparent" id="floatingInputLastName"
                           placeholder="">
                    <label for="floatingInputLastName" class="ms-2 ">Last Name</label>
                    <span class="text-danger" asp-validation-for="@Model.sendLink.LastName"></span>
                </div>
                <div class="form-floating mb-3 col-12">
                    <input asp-for="@Model.sendLink.PhoneWithoutCode" type="tel" class="phone form-control bg-transparent" id="floatingInputPhone"
                           placeholder="">
                    <input type="text" asp-for="@Model.sendLink.Phone" id="patientPhone" hidden />
                    <span class="text-danger" asp-validation-for="@Model.sendLink.PhoneWithoutCode"></span>
                    <span class="text-danger" id="phoneErrorBox"></span>
                </div>
                <div class="form-floating mb-3 col-12">
                    <input asp-for="@Model.sendLink.Email" type="email" class="form-control bg-transparent" id="pEmail"
                           placeholder="">
                    <label for="pEmail" class="ms-2 ">Email</label>
                    <span class="text-danger" asp-validation-for="@Model.sendLink.Email"></span>
                </div>
                <div class="mt-4 d-flex justify-content-end">
                    <button type="submit" class="btn btn-info confirm-btn mx-2">Confirm</button>
                    <button type="reset" class="btn cancel-btn" data-bs-dismiss="modal">Cancel</button>
                </div>
            </form>

        </div>
    </div>
</div>

<partial name="_ValidationScriptsPartial" />
<script src="~/js/site.js" asp-append-version="true"></script>
